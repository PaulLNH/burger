<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <h1>Burger Tracker!</h1>
            <h5>
                <em>Keep track of burgers you wish to eat, and burgers you've ate.</em>
            </h5>
            <br>
            <hr>
        </div>

    </div>
    <div class="row">
        <div class="col-md-4 col-lg-4 col-xs-12 col-sm-12 text-center">
            <h2>Add new Burger:</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="bu">Burger Name:</label>
                    <input type="text" id="bu" name="name">
                </div>

                <button type="submit">Add</button>
            </form>
        </div>
        <hr>
        <div class="col-md-4 col-lg-4 col-xs-12 col-sm-12 text-center">
            <h2>Wish List:</h2>

            <ul>
                {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block eat=true}} {{/unless}} {{/each}}
            </ul>
        </div>
        <hr>
        <div class="col-md-4 col-lg-4 col-xs-12 col-sm-12 text-center">
            <h2>Ate:</h2>

            <ul>
                {{#each burgers}} {{#if devoured}} {{> burgers/burger-block eat=false}} {{/if}} {{/each}}
            </ul>
        </div>
    </div>

</div>